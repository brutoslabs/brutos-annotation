<?xml version="1.0" encoding="UTF-8"?>

<controllers  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://brutos.sourceforge.net/schema/controllers'
   xsi:schemaLocation='http://brutos.sourceforge.net/schema/controllers http://brutos.sourceforge.net/schema/controllers/brutos-controllers-1.0.xsd'>

    <controller id="/index.jbrs"
        class="org.brandao.brutos.helper.controller.SimpleController">

        <bean name="bean1"
            target="org.brandao.brutos.helper.controller.SimpleBean"/>

        <bean name="bean2"
            target="org.brandao.brutos.helper.controller.SimpleBean">
            <constructor-arg>
                <value>Value1</value>
            </constructor-arg>
            <constructor-arg type="int">
                <value>100</value>
            </constructor-arg>
            <constructor-arg>
                <null/>
            </constructor-arg>
        </bean>

        <bean name="bean3"
            target="org.brandao.brutos.helper.controller.SimpleBean">
            <constructor-arg>
                <value>Value1</value>
            </constructor-arg>
            <constructor-arg>
                <value>100</value>
            </constructor-arg>
            <constructor-arg>
                <ref bean="bean1"/>
            </constructor-arg>
        </bean>

        <bean name="bean4"
            target="org.brandao.brutos.helper.controller.SimpleBean">
            <constructor-arg>
                <value>Value1</value>
            </constructor-arg>
            <constructor-arg>
                <value>100</value>
            </constructor-arg>
            <constructor-arg>
                <bean target="org.brandao.brutos.helper.controller.SimpleBean"/>
            </constructor-arg>
        </bean>

        <bean name="bean5"
            target="org.brandao.brutos.helper.controller.SimpleBean">
            <property name="arg">
                <value>Value</value>
            </property>
            <property name="arg2">
                <bean target="java.lang.Integer">
                    <constructor-arg>
                        <value>100</value>
                    </constructor-arg>
                </bean>
            </property>
            <property name="bean">
                <ref bean="bean4"/>
            </property>
        </bean>

        <bean name="bean6"
            target="org.brandao.brutos.helper.controller.SimpleBean">
            <constructor-arg value="Value1">
                <validator message="Esperado value1 e nao ${equal}">
                    <rule name="equal" value="Value1"/>
                    <rule name="equal">Value1</rule>
                </validator>
            </constructor-arg>
            <constructor-arg bean="val" scope="request">
                <validator message="Esperado 100 e nao ${equal}">
                    <rule name="equal" value="100"/>
                    <rule name="equal">100</rule>
                </validator>
            </constructor-arg>
            <constructor-arg bean="bean4" mapping="true">
                <validator message="Obrigatorio">
                    <rule name="required"/>
                </validator>
            </constructor-arg>
        </bean>

        <bean name="bean7"
            target="org.brandao.brutos.helper.controller.SimpleBean">
            <property name="arg" value="Value1">
                <validator message="Esperado value1 e nao ${equal}">
                    <rule name="equal" value="Value1"/>
                    <rule name="equal">Value</rule>
                </validator>
            </property>
        </bean>

        <bean name="factory"
            target="org.brandao.brutos.helper.controller.FactoryBean"/>

        <bean name="bean8"
            target="org.brandao.brutos.helper.controller.SimpleBean"
            factory="factory" method-factory="getInstance"/>

        <bean name="bean9"
            target="org.brandao.brutos.helper.controller.FactoryBean"
            method-factory="getInstanceByStaticMethod"/>

        <bean name="bean10"
            target="java.util.HashMap">
            <key target="java.lang.Integer">
                <constructor-arg>
                    <ref bean="id"/>
                </constructor-arg>
            </key>
            <element target="org.brandao.brutos.helper.controller.SimpleBean">
                <property name="arg" bean="arg" scope="request"/>
            </element>
        </bean>

        <bean name="bean11"
            target="java.util.ArrayList">
            <element target="org.brandao.brutos.helper.controller.SimpleBean">
                <property name="arg" bean="arg" scope="request"/>
            </element>
        </bean>

        <bean name="bean12"
            target="org.brandao.brutos.helper.controller.SimpleBean">
            <constructor-arg value="Value1">
                <validator message="Esperado value1 e nao ${equal}">
                    <rule name="equal" value="Value1"/>
                    <rule name="equal">Value1</rule>
                </validator>
            </constructor-arg>
            <constructor-arg bean="val" scope="request">
                <validator message="Esperado 100 e nao ${equal}">
                    <rule name="equal" value="100"/>
                    <rule name="equal">100</rule>
                </validator>
            </constructor-arg>
            <constructor-arg bean="bean4">
                <validator message="Obrigatorio">
                    <rule name="required"/>
                </validator>
            </constructor-arg>
        </bean>

    </controller>
   
</controllers>
