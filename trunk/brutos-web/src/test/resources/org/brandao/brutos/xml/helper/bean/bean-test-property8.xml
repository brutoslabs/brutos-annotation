<?xml version="1.0" encoding="UTF-8"?>

<controllers  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://www.brutosframework.com.br/schema/controllers'
   xsi:schemaLocation='http://www.brutosframework.com.br/schema/controllers http://www.brutosframework.com.br/schema/controllers/brutos-controllers-1.1.xsd'>

    <controller
        class="org.brandao.brutos.helper.controller.SimpleController">

        <bean name="bean"
            target="org.brandao.brutos.helper.controller.SimpleBean">
                <property name="arg" bean="bean2" mapping="true"/>
        </bean>

        <bean name="bean2"
            target="java.lang.String">
                <constructor-arg>
                    <value>Texto</value>
                </constructor-arg>
        </bean>


    </controller>

</controllers>
