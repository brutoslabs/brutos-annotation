<?xml version="1.0" encoding="UTF-8"?>

<controllers  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://brutos.sourceforge.net/schema/controllers'
   xsi:schemaLocation='http://brutos.sourceforge.net/schema/controllers http://brutos.sourceforge.net/schema/controllers/brutos-controllers-1.0.xsd'>

    <controller
        class="org.brandao.brutos.helper.controller.SimpleController">

        <bean name="bean"
            target="org.brandao.brutos.helper.controller.SimpleBean">
                <constructor-arg type="org.brandao.brutos.helper.controller.SimpleBean">
                    <bean target="org.brandao.brutos.helper.controller.SimpleBean">
                        <property name="arg" bean="arg"/>
                    </bean>
                </constructor-arg>
                <property name="bean" bean="bean_property">
                    <bean target="org.brandao.brutos.helper.controller.SimpleBean">
                        <property name="arg2" bean="arg2"/>
                    </bean>
                </property>
        </bean>

    </controller>

</controllers>
