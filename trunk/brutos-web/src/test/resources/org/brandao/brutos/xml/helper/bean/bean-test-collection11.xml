<?xml version="1.0" encoding="UTF-8"?>

<controllers  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://www.brutosframework.com.br/schema/controllers'
   xsi:schemaLocation='http://www.brutosframework.com.br/schema/controllers http://www.brutosframework.com.br/schema/controllers/brutos-controllers-1.1.xsd'>

    <controller
        class="org.brandao.brutos.helper.controller.SimpleController">

        <bean name="bean" target="org.brandao.brutos.helper.controller.SimpleBean">
            <property name="map">
                <bean target="java.util.HashMap">
                    <key>
                    <bean target="org.brandao.brutos.helper.controller.EnumTest" method-factory="valueOf">
                        <constructor-arg bean="key"/>
                    </bean>
                    </key>
                    <element>
                    <bean target="java.lang.String">
                        <constructor-arg bean="value" type="java.lang.String"/>
                    </bean>
                    </element>
            </bean>
            </property>
        </bean>
    </controller>

</controllers>
