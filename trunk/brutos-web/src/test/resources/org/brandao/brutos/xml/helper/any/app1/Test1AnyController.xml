<?xml version="1.0" encoding="UTF-8"?>
<controllers  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://www.brutosframework.com.br/schema/controllers'
   xsi:schemaLocation='http://www.brutosframework.com.br/schema/controllers http://www.brutosframework.com.br/schema/controllers/brutos-controllers-1.1.xsd'>

    <controller id="/controller" action-type="hierarchy"
        class="org.brandao.brutos.helper.any.app1.Test1AnyController">

		<bean name="decimalProperty" target="org.brandao.brutos.helper.any.app1.DecimalProperty">
			<property name="name"/>
			<property name="length"/>
			<property name="decimals"/>
		</bean>

		<bean name="setProperty" target="org.brandao.brutos.helper.any.app1.SetProperty">
			<property name="name"/>
			<property name="values">
				<bean target="java.util.ArrayList">
					<element type="java.lang.String"/>
				</bean>
			</property>
		</bean>
		
		<action id="/test1" executor="test1Action">
			<parameter bean="property">
				<any bean="propertyType" type="java.lang.String">
					<meta-value value="decimal" bean="decimalProperty"/>
					<meta-value value="set" bean="setProperty"/>
				</any>
			</parameter>
		</action>

		<action id="/test2" executor="test2Action">
			<parameter bean="property">
				<any bean="propertyType" enum-property="string" 
				    type="org.brandao.brutos.helper.any.app1.PropertyType">
					<meta-value value="DECIMAL" bean="decimalProperty"/>
					<meta-value value="SET" bean="setProperty"/>
				</any>
			</parameter>
		</action>

		<action id="/test3" executor="test3Action">
			<parameter bean="property">
				<any bean="propertyType" type="java.lang.Integer">
					<meta-value value="0" bean="decimalProperty"/>
					<meta-value value="1" bean="setProperty"/>
				</any>
			</parameter>
		</action>

		<action id="/test4" executor="test4Action">
			<parameter bean="property">
				<any bean="propertyType" temporal-property="yyyy-MM-dd" type="java.util.Date">
					<meta-value value="2015-01-01" bean="decimalProperty"/>
					<meta-value value="2015-01-02" bean="setProperty"/>
				</any>
			</parameter>
		</action>
		
    </controller>

</controllers>
