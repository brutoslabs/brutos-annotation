<?xml version="1.0" encoding="UTF-8"?>

<controllers  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
   xmlns='http://brutos.sourceforge.net/schema/controllers'
   xsi:schemaLocation='http://brutos.sourceforge.net/schema/controllers http://brutos.sourceforge.net/schema/controllers/brutos-controllers-1.0.xsd'>

   <interceptors>
       <interceptor name="testInterceptor" 
                class="org.brandao.brutos.helper.controller.SimpleInterceptor">
                <param name="param1">value1</param>
                <param name="param2" value="value2"/>
       </interceptor>
       <interceptor-stack name="testStack">
           <interceptor-ref name="testInterceptor">
               <param name="param1">value3</param>
           </interceptor-ref>
       </interceptor-stack>
   </interceptors>
   
    <controller action-id="action" id="/testController.htm"
        class="org.brandao.brutos.helper.controller.SimpleController">

            <interceptor-ref name="testStack"/>
            
            <action id="defaultAction" result="result" executor="defaultAction"/>
    </controller>

</controllers>
