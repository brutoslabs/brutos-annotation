<?xml version="1.0" encoding="UTF-8"?>
<actions>
        <action>
            <actionName>CUSTOM-Site</actionName>
            <displayName>Site</displayName>
            <goals>
                <goal>site:site</goal>
            </goals>
            <properties>
                
                <outputEncoding>UTF-8</outputEncoding>
                
                <file.encoding>UTF-8</file.encoding>
            </properties>
        </action>
        <action>
            <actionName>build</actionName>
            <goals>
                <goal>install</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <createChecksum>true</createChecksum>
            </properties>
        </action>
        <action>
            <actionName>rebuild</actionName>
            <goals>
                <goal>clean</goal>
                <goal>install</goal>
            </goals>
            <properties>
                <maven.test.skip>true</maven.test.skip>
                <createChecksum>true</createChecksum>
            </properties>
        </action>
        <action>
            <actionName>debug.test.single</actionName>
            <goals>
                <goal>test-compile</goal>
                <goal>surefire:test</goal>
                
            </goals>
            <properties>
                <jpda.listen>true</jpda.listen>
                <maven.surefire.debug>-Xdebug -Xrunjdwp:transport=dt_socket,server=n,address=${jpda.address}</maven.surefire.debug>
                <jpda.stopclass>${packageClassName}</jpda.stopclass>
                <forkMode>once</forkMode>
                <test>${className}</test>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-Deploy</actionName>
            <displayName>Deploy</displayName>
            <goals>
                <goal>clean</goal>
                <goal>deploy</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-release</actionName>
            <displayName>release</displayName>
            <goals>
                <goal>nexus-staging:release</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
        <action>
            <actionName>CUSTOM-drop</actionName>
            <displayName>drop</displayName>
            <goals>
                <goal>nexus-staging:drop</goal>
            </goals>
            <properties>
                <skipTests>true</skipTests>
            </properties>
        </action>
    </actions>
